@model GestaoMais.Entities.Entities.Pessoa.PessoaTelefone

@{
    ViewData["Title"] = "Create";
}



<h4>PessoaTelefone</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="PessoaId" class="control-label"></label>
                <a class="addNew" asp-area="" asp-controller="Pessoas" asp-action="Index">Adicionar novo(a)</a>
                <select asp-for="PessoaId" class="form-control" asp-items="ViewBag.PessoaId"></select>
            </div>
            <div class="form-group">
                <label asp-for="TipoTelefoneId" class="control-label"></label>
                <a class="addNew" asp-area="" asp-controller="TipoTelefones" asp-action="Index">Adicionar novo(a)</a>
                <select asp-for="TipoTelefoneId" class="form-control" asp-items="ViewBag.TipoTelefoneId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Ddd" class="control-label"></label>
                <input id="ddd" asp-for="Ddd" class="form-control" />
                <span asp-validation-for="Ddd" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Numero" class="control-label"></label>
                <input id="telefone" asp-for="Numero" class="form-control" />
                <span asp-validation-for="Numero" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Principal" /> @Html.DisplayNameFor(model => model.Principal)
                </label>
            </div>

            <div class="form-group">
                <input type="submit" value="Adicionar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Visualizar lista de registros</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
